{
  "name": "how2",
  "version": "0.4.0",
  "description": "A tool for making local documentation written in markdown searchable and viewable.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run build && npm run watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.min.css --output-style compressed",
    "watch-node": "nodemon dist/main.js",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "build-ts": "tsc",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.min.css --output-style compressed",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://shadowstrafe.duckdns.org/git_repos/how2"
  },
  "author": "Lee Chengkai (leechengkai@gmail.com)",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^2.0.2",
    "cookie-parser": "^1.4.3",
    "elasticlunr": "^0.9.5",
    "escape-html": "^1.0.3",
    "express": "^4.16.2",
    "front-matter": "^2.3.0",
    "glob": "^7.1.2",
    "highlight.js": "^9.12.0",
    "katex": "^0.9.0",
    "markdown-it": "^8.4.0",
    "markdown-it-math": "^4.1.0",
    "moment": "^2.19.1",
    "pug": "^2.0.3",
    "slash": "^1.0.0"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/cookie-parser": "^1.4.1",
    "@types/escape-html": "0.0.20",
    "@types/express": "^4.11.1",
    "@types/highlight.js": "^9.12.2",
    "@types/jquery": "^3.3.1",
    "@types/markdown-it": "0.0.4",
    "@types/shelljs": "^0.7.8",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.4",
    "node-sass": "^4.8.3",
    "nodemon": "^1.17.3",
    "shelljs": "^0.8.1",
    "ts-node": "^6.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  }
}
